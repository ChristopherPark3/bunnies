generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model reviews {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  email      String?
  rating     String?
  review     String?
  firstName  String?
  lastName   String?
  client_id  String?
  bookings   booking[]
  client     clients?  @relation(fields: [client_id], references: [id])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id         String   @id @default(cuid())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @updatedAt @db.Timestamptz(6)
}

model invoices {
  id             String    @id @default(cuid())
  created_at     DateTime  @default(now()) @db.Timestamptz(6)
  updated_at     DateTime  @updatedAt @db.Timestamptz(6)
  amount         String?
  status         String?
  client_id      String?
  client_email   String?
  client_name    String?
  payment_method String?
  bookings       booking[]
  client         clients?  @relation(fields: [client_id], references: [id])
}

model bunnies {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  updated_at DateTime  @updatedAt @db.Timestamptz(6)
  name       String?
  age        BigInt?
  gender     String?
  breed      String?
  color      String?
  weight     String?
  notes      String?
  client_id  String?
  bookings   booking[]
  client     clients?  @relation(fields: [client_id], references: [id])
}

model clients {
  id         String     @id @default(cuid())
  created_at DateTime   @default(now()) @db.Timestamptz(6)
  updated_at DateTime   @updatedAt @db.Timestamptz(6)
  firstName  String?
  lastName   String?
  email      String?
  phone      String?
  bookings   booking[]
  bunnies    bunnies[]
  invoices   invoices[]
  reviews    reviews[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model booking {
  id               String    @id @default(cuid())
  created_at       DateTime  @default(now()) @db.Timestamptz(6)
  updated_at       DateTime  @updatedAt @db.Timestamptz(6)
  to               DateTime? @db.Timestamptz(6)
  from             DateTime? @db.Timestamptz(6)
  bunny_id         String?
  client_id        String?
  invoice_id       String?
  nail_trim        Boolean?
  sanitary_shaving Boolean?
  medication       Boolean?
  review_id        String?
  bunny            bunnies?  @relation(fields: [bunny_id], references: [id])
  client           clients?  @relation(fields: [client_id], references: [id])
  invoice          invoices? @relation(fields: [invoice_id], references: [id])
  review           reviews?  @relation(fields: [review_id], references: [id])
}
